{
  "extends": "airbnb",
  "rules": {
    "react/jsx-filename-extension": off,
    "react/prop-types": warn,
    "no-else-return": off,
    "react/jsx-one-expression-per-line": off,
    "max-len": off,
    "react/forbid-prop-types": off,
    "max-classes-per-file": off,
    "react/jsx-props-no-spreading": warn
  },
  "settings": {
    "import/resolver": {
      "babel-module": {
        "root": [
          "./src"
        ],
        "extensions": [
          ".js"
        ]
      }
    }
  },
  "env": {
    "browser": true
  }
}
